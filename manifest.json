{
  "manifest_version": 3,
  "name": "LinkedIn Post Blurrer",
  "version": "1.0",
  "description": "Blurs LinkedIn posts that are detected as boastful.",
  "permissions": [
    "storage",
    "activeTab",
    "runtime",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://api-inference.huggingface.co/*",
    "https://router.huggingface.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  }
}